<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:layout_gravity="center"
    android:orientation="vertical">

        <TextView
            android:id="@+id/edit_user_info_header"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:text="Editing User Name"
            android:textColor="@color/hintColor"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/edit_user_info_message_textview"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Enter your desired name below:"
            android:textColor="@color/hintColor"
            />


        <EditText
            android:id="@+id/edit_user_info_edittext"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/hintColor"
            android:fontFamily="@font/autour_one"
            android:layout_gravity="center"
            android:singleLine="true"
            android:gravity="center"
            android:maxLength="12"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="24dp"
            >

            <Button
                android:id="@+id/edit_user_info_cancel_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/autour_one"
                android:layout_marginEnd="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="@drawable/rounded_button_corners"
                android:textColor="@color/hintColor"
                android:gravity="center"
                android:text="Cancel"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/edit_user_info_update_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/autour_one"
                android:layout_marginStart="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="@drawable/rounded_button_corners"
                android:textColor="@color/hintColor"
                android:gravity="center"
                android:text="Update"
                android:textAllCaps="false" />

        </LinearLayout>
</LinearLayout>
