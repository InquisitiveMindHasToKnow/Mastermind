<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".activities.MainPageActivity">

    <TextView
        android:id="@+id/header_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/autour_one"
        android:padding="8dp"
        android:text="@string/mastermind_header_text"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/greeting_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/textColor"
        android:text="Good morning, Omar!"
        />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/mastermindguesses" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/play_now_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/autour_one"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="@string/play_now_button_text"
            android:textAllCaps="false"
            android:textColor="@color/textColor"
            android:textSize="24sp" />

        <Button
            android:id="@+id/rules_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/autour_one"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/game_rules_text"
            android:textAllCaps="false"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>