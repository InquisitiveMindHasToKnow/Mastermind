<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_gravity="center"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/winner_textview"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/autour_one"
        android:gravity="center"
        android:text="WINNER!"
        android:textColor="@color/userWonColor"
        android:textStyle="bold"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/winner_dialog_combination_textview"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/autour_one"
        android:gravity="center"
        android:textColor="@color/userWonColor"
        android:textSize="16sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/bart_winner_icon"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:src="@drawable/bart_sitting" />


    <TextView
        android:id="@+id/well_done_textview"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/autour_one"
        android:gravity="center"
        android:text="Well done! I knew you could do it. \nHonestly, I did!"
        android:textColor="@color/userWonColor"
       />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        >

    <Button
        android:id="@+id/winner_confirm_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/autour_one"
        android:layout_marginEnd="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/rounded_button_corners"
        android:textColor="@color/userWonColor"
        android:gravity="center"
        android:text="Confirm"
        android:textAllCaps="false" />

        <Button
            android:id="@+id/winner_play_again_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/autour_one"
            android:layout_marginStart="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/rounded_button_corners"
            android:textColor="@color/userWonColor"
            android:gravity="center"
            android:text="Play Again"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>
</RelativeLayout>
