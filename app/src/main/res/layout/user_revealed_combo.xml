<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/revealed_combination_you_lost_textview"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:text="You lost!"
            android:textColor="@color/low_guesses_color"
            android:textSize="32sp" />


        <TextView
            android:id="@+id/revealed_combination_winning_combination_textview"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:textColor="@color/userWonColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bart_you_lost_icon"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:src="@drawable/bartlooking" />


        <TextView
            android:id="@+id/revealed_combination_message_textview"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:text="You revealed the correct combination manually before the game ended."
            android:textColor="@color/low_guesses_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/revealed_combination_message_two_textview"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Better luck next time!"
            android:textColor="@color/low_guesses_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <Button
                android:id="@+id/revealed_combination_confirm_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/autour_one"
                android:layout_marginEnd="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="@drawable/rounded_button_corners"
                android:textColor="@color/low_guesses_color"
                android:gravity="center"
                android:text="Confirm"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/revealed_combination_play_again_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/autour_one"
                android:layout_marginStart="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="@drawable/rounded_button_corners"
                android:textColor="@color/low_guesses_color"
                android:gravity="center"
                android:text="Play Again"
                android:textAllCaps="false" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>