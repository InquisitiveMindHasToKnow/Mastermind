<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/header_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/autour_one"
        android:padding="8dp"
        android:text="Can you guess the correct combination? "
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/numbers_selected_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textStyle="bold"
            android:text="0"
            android:textColor="@color/textColor" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textStyle="bold"
            android:text="1"
            android:textColor="@color/textColor" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/textColor" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textStyle="bold"
            android:text="3"
            android:textColor="@color/textColor" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textStyle="bold"
            android:text="4"
            android:textColor="@color/textColor" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textStyle="bold"
            android:text="5"
            android:textColor="@color/textColor" />


        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="6"
            android:textStyle="bold"
            android:textColor="@color/textColor" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textStyle="bold"
            android:text="7"
            android:textColor="@color/textColor" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guesses:"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/remaining_guess_count_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Time:"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/countdown_timer_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:text="00:30"
                android:textColor="@color/textColor"
                android:textSize="16sp" />


        </LinearLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/user_guess_edittext"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:focusable="false"
        android:hint="@string/guess_hint"
        android:inputType="number"
        android:maxLength="4"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:textSize="32sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:id="@+id/zero_one_two_three_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/zero_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/button_zero_text"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/one_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/button_one_text"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/two_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/button_two_text"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/three_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/button_three_text"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/four_five_six_seven_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zero_one_two_three_linear"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/button_four_text"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/five_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/button_five_text"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/six_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/button_six_text"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/seven_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/button_seven_text"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/four_five_six_seven_linear"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delete_button"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/delete_button_text"
                android:textAllCaps="false"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/unassigned_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/guess_button"
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/guess_button_text"
                android:textAllCaps="false"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/previous_guesses_header_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_alignParentStart="true"
            android:textColor="@color/textColor"
            android:text="Previous Guesses"/>

    </RelativeLayout>

</LinearLayout>